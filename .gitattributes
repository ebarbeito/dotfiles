# Set default behavior for text files
* text=auto

# Normalize line endings to LF (Unix-style) on checkout
* text eol=lf

# Archives
*.7z       binary
*.bz       binary
*.bz2      binary
*.bzip2    binary
*.gz       binary
*.lz       binary
*.lzma     binary
*.rar      binary
*.tar      binary
*.taz      binary
*.tbz      binary
*.tbz2     binary
*.tgz      binary
*.tlz      binary
*.txz      binary
*.xz       binary
*.Z        binary
*.zip      binary
*.zst      binary

# Graphics
*.png      binary diff=exif
*.jpg      binary diff=exif
*.jpeg     binary diff=exif
*.gif      binary diff=exif
*.tif      binary
*.tiff     binary
*.ico      binary
*.svg      text
*.eps      binary

# Documents
*.bibtex   text diff=bibtex
*.doc      binary
*.DOC      binary
*.docx     binary
*.DOCX     binary
*.dot      binary
*.DOT      binary
*.epub     binary
*.pdf      binary
*.PDF      binary
*.rtf      binary
*.RTF      binary
*.md       text diff=markdown
*.mdx      text diff=markdown
*.tex      text diff=tex
*.textile  text
*.csv      text
*.tab      text
*.tsv      text
*.txt      text
*.sql      text

# Scripts
*.bash     text eol=lf
*.fish     text eol=lf
*.sh       text eol=lf
*.zsh      text eol=lf
# These are explicitly windows files and should use crlf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# Serialisation
*.json     text diff=json
*.proto    text
*.toml     text
*.xml      text diff=xml
*.yaml     text diff=yaml
*.yml      text diff=yaml

# Web
*.css   diff=css
*.html  diff=html
*.js    diff=javascript
*.phar  -diff
*.php   diff=php

# Text files where line endings should be preserved
*.patch -text

# Exclude files from exporting
.editorconfig  export-ignore
.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore
